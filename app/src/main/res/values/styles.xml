<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 没有title theme. -->
    <style name="NoTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>
    <!-- 全屏 theme. -->
    <style name="FullScreenTheme" parent="NoTitleTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- 分割线 默认高度1dp  使用 " <View style="@style/divider_view" /> "-->
    <style name="divider_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--自适应-->
    <style name="w_w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--宽度match-->
    <style name="m_w" parent="w_w">
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--宽度match-->
    <style name="m_m" parent="m_w">
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--垂直的linearLayout-->
    <style name="w_w.vertical_ll" parent="w_w">
        <item name="android:orientation">vertical</item>
    </style>
    <!--垂直的linearLayout-->
    <style name="m_w.vertical_ll">
        <item name="android:orientation">vertical</item>
    </style>
    <!--垂直的linearLayout-->
    <style name="m_m.vertical_ll">
        <item name="android:orientation">vertical</item>
    </style>
    <!--垂直的linearLayout居中-->
    <style name="m_w.vertical_ll.center">
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--水平的linearLayout-->
    <style name="w_w.horizontal_ll" parent="w_w">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--水平的linearLayout-->
    <style name="m_w.horizontal_ll">
        <item name="android:orientation">horizontal</item>
    </style>
    <!--水平的linearLayout-->
    <style name="w_w.horizontal_ll.center">
        <item name="android:gravity">center</item>
    </style>
    <!--水平的linearLayout-->
    <style name="m_w.horizontal_ll.center">
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 内部居中 -->
    <style name="w_w.gravity_center" parent="w_w">
        <item name="android:gravity">center</item>
    </style>
    <!-- 内部居中 -->
    <style name="m_w.gravity_center" parent="m_w">
        <item name="android:gravity">center</item>
    </style>
    <!-- 内部垂直居中 -->
    <style name="w_w.gravity_vertical" parent="w_w">
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 内部垂直居中 -->
    <style name="m_w.gravity_vertical">
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
